<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:contentPadding="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvListaLibros">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Para la foto -->
        <ImageView
            android:id="@+id/imgListaLibros"
            android:layout_width="132dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_book"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imagen_opciones"
            android:layout_toLeftOf="@id/imagen_opciones"
            android:layout_toEndOf="@id/imgListaLibros"
            android:layout_toRightOf="@+id/imgListaLibros"
            android:orientation="vertical">

            /<!--Para el nombre -->
            <TextView
                android:id="@+id/txtAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Autor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:textColor="@color/black"
                android:maxLength="180"
                android:text="Descripcion Max 180 caracteres"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Genero"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtValoracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ValoraciÃ³n"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginRight="20dp"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Holo.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:max="5"
                    android:rating="0" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imagen_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more"
            tools:ignore="VectorDrawableCompat"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>